<?xml version="1.0" encoding="utf-8"?>
<!-- 
    Note: Add entries to the App.config file for configuration settings
    that apply only to the Test project.
-->
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
    <section name="specFlow" type="TechTalk.SpecFlow.Configuration.ConfigurationSectionHandler, TechTalk.SpecFlow" />
  </configSections>
  <appSettings>
    <add key="RedisHost" value="10.14.0.93" />
    <add key="IdentityIssuerThumbprint" value="490EF21EED8C92C57FF21A0D82EABD94AA48F2B5" />
    <add key="IdentityIssuerName" value="http://identityserver.v2.thinktecture.com/trust/changethis/" />
    <add key="IdentityAudienceUri" value="urn:ExampleWeb" />
  </appSettings>
  <specFlow>
    <!-- For additional details on SpecFlow configuration options see http://go.specflow.org/doc-config -->
    <unitTestProvider name="NUnit" />
  </specFlow>
  <log4net>
    <appender name="SplunkAppender" type="log4net.Appender.RemoteSyslogAppender">
      <param name="RemoteAddress" value="constellationlogs.bridgepoint.local" />
      <param name="RemotePort" value="514" />
      <layout type="log4net.Layout.PatternLayout, log4net">
        <conversionPattern value="%UserId [%3thread] %-5level %message%newline" />
        <converter>
          <name value="UserId" />
          <type value="BpeProducts.Common.Log.UserIdPatternConverter" />
        </converter>
      </layout>
    </appender>
    <appender name="DebugAppender" type="log4net.Appender.DebugAppender">
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%UserId [%3thread] %-5level %message%newline" />
        <converter>
          <name value="UserId" />
          <type value="BpeProducts.Common.Log.UserIdPatternConverter" />
        </converter>
      </layout>
    </appender>
    <root>
      <level value="ALL" />
      <appender-ref ref="DebugAppender" />
      <appender-ref ref="SplunkAppender" />
    </root>
  </log4net>
  <runtime>
    <assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
      <dependentAssembly>
        <assemblyIdentity name="Castle.Core" publicKeyToken="407dd0808d44fbdc" culture="neutral" />
        <bindingRedirect oldNewVersion="0.0.0.0-3.2.0.0" newNewVersion="3.2.0.0" />
      </dependentAssembly>
      <dependentAssembly>
        <assemblyIdentity name="System.Web.Mvc" publicKeyToken="31bf3856ad364e35" culture="neutral" />
        <bindingRedirect oldNewVersion="0.0.0.0-4.0.0.0" newNewVersion="4.0.0.0" />
      </dependentAssembly>
      <dependentAssembly>
        <assemblyIdentity name="System.Web.WebPages" publicKeyToken="31bf3856ad364e35" culture="neutral" />
        <bindingRedirect oldNewVersion="0.0.0.0-2.0.0.0" newNewVersion="2.0.0.0" />
      </dependentAssembly>
    </assemblyBinding>
  </runtime>
</configuration>