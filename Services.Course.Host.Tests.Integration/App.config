<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <configSections>
    <section name="specFlow" type="TechTalk.SpecFlow.Configuration.ConfigurationSectionHandler, TechTalk.SpecFlow" />
    <section name="system.identityModel" type="System.IdentityModel.Configuration.SystemIdentityModelSection, System.IdentityModel, Version=4.0.0.0, Culture=neutral, PublicKeyToken=B77A5C561934E089" />
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
  </configSections>
  <specFlow>
    <!-- For additional details on SpecFlow configuration options see http://go.specflow.org/doc-config -->
  </specFlow>
  <connectionStrings>
    <add name="DefaultConnection" providerName="System.Data.SqlClient" connectionString="Data Source=(localdb)\v11.0;Initial Catalog=course;Integrated Security=True" />
    <!--<add name="AccountConnection" connectionString="Data Source=devpisql.thuze.com;Initial Catalog=Account;Integrated Security=SSPI;" providerName="System.Data.SqlClient" />-->
    <add name="AccountConnection" connectionString="Data Source=(localdb)\v11.0;Initial Catalog=Account;Integrated Security=SSPI;" providerName="System.Data.SqlClient" />
  </connectionStrings>
  <appSettings>
    <add key="RedisHost" value="10.14.0.93" />
    <add key="IdentityIssuerThumbprint" value="490EF21EED8C92C57FF21A0D82EABD94AA48F2B5" />
    <add key="IdentityIssuerName" value="http://identityserver.v2.thinktecture.com/trust/changethis" />
    <add key="IdentityAudienceUri" value="urn:ExampleWeb" />
    <add key="TestHostBaseAddress" value="https://localhost/"/>
    <!--<add key="TestHostBaseAddress" value="https://devapi.thuze.com/course"/>-->
    <!--<add key="AccountTestHostBaseAddress" value="https://devapi.thuze.com/account"/>-->
    <add key="AccountTestHostBaseAddress" value="http://blah:10404"/>
    <add key="UpdateSchema" value="true"/>
    <!--<add key="AclServiceBaseUrl" value ="https://devapi.thuze.com/account/"/>-->
    <add key="AclServiceBaseUrl" value ="http://blah:10404"/>
  </appSettings>
  <log4net>
    <appender name="SplunkAppender" type="log4net.Appender.RemoteSyslogAppender">
      <param name="RemoteAddress" value="devpisplunk.aep.bpeservices.local" />
      <param name="RemotePort" value="514" />
      <layout type="log4net.Layout.PatternLayout, log4net">
        <conversionPattern value="%UserId [%3thread] %-5level %message%newline" />
        <converter>
          <name value="UserId" />
          <type value="BpeProducts.Common.Log.UserIdPatternConverter" />
        </converter>
      </layout>
    </appender>
    <appender name="DebugAppender" type="log4net.Appender.DebugAppender">
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%UserId [%3thread] %-5level %message%newline" />
        <converter>
          <name value="UserId" />
          <type value="BpeProducts.Common.Log.UserIdPatternConverter" />
        </converter>
      </layout>
    </appender>
    <appender name="EventLogAppender" type="log4net.Appender.EventLogAppender">
      <param name="LogName" value="Application" />
      <param name="ApplicationName" value="CourseBuilder" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%UserId [%3thread] %-5level %message%newline" />
      </layout>
    </appender>
    <logger name="CourseBuilder">
      <level value="ERROR" />
    </logger>
    <logger name="NHibernate">
      <level value="ERROR" />
    </logger>
    <logger name="NHibernate.SQL">
      <level value="DEBUG" />
      <!-- Change to DEBUG for SQL output -->
    </logger>
    <root>
      <level value="ALL" />
      <appender-ref ref="DebugAppender" />
      <!--<appender-ref ref="SplunkAppender" />-->
      <!--<appender-ref ref="EventLogAppender" />-->
    </root>
  </log4net>

  <system.identityModel>
    <identityConfiguration saveBootstrapContext="true"/>
  </system.identityModel>

</configuration>
